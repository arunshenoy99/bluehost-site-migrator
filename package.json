{
  "name": "bluehost-site-migrator",
  "description": "Quickly and easily migrate your website to Bluehost.",
  "private": true,
  "main": "webpack.config.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluehost/bluehost-site-migrator.git"
  },
  "author": "Micah Wood <micah@wpscholar.com>",
  "license": "GPL-2.0+",
  "bugs": {
    "url": "https://github.com/bluehost/bluehost-site-migrator/issues"
  },
  "homepage": "https://github.com/bluehost/bluehost-site-migrator#readme",
  "dependencies": {
    "@wordpress/api-fetch": "^3.13.1",
    "@wordpress/i18n": "^3.11.0",
    "lodash": "^4.17.15",
    "vue": "^2.6.11",
    "vue-router": "^3.1.6"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@wordpress/babel-plugin-makepot": "^3.5.0",
    "@wordpress/browserslist-config": "^2.6.0",
    "autoprefixer": "^9.7.6",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "css-loader": "^3.5.3",
    "cypress": "^4.4.1",
    "file-loader": "^5.1.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.0",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^8.0.2",
    "url-loader": "^3.0.0",
    "vue-loader": "^15.9.1",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "wp-vue-i18n": "^1.1.4",
    "yaml-lint": "^1.2.4"
  },
  "scripts": {
    "build": "webpack -p",
    "cypress": "npx cypress open",
    "i18n": "wpvuei18n makepot",
    "lint": "npx yamllint **/*.yml --ignore=node_modules/**",
    "start": "webpack --watch",
    "test": "npx cypress run"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.yml": [
      "yamllint --ignore=node_modues/**"
    ],
    "**/*.php": [
      "vendor/bin/phpcs --standard=Bluehost -s"
    ]
  }
}
