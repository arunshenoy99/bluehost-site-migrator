  "private": true,
  "main": "webpack.config.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bluehost/bluehost-site-migrator.git"
  },
  "author": "Micah Wood <micah@wpscholar.com>",
  "license": "GPL-2.0+",
  "bugs": {
    "url": "https://github.com/bluehost/bluehost-site-migrator/issues"
  },
  "homepage": "https://github.com/bluehost/bluehost-site-migrator#readme",
  "dependencies": {
    "@wordpress/api-fetch": "^3.9.0",
    "@wordpress/i18n": "^3.9.0",
    "lodash": "^4.17.15",
    "vue": "^2.6.11",
    "vue-router": "^3.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@wordpress/babel-plugin-makepot": "^3.3.0",
    "@wordpress/browserslist-config": "^2.6.0",
    "autoprefixer": "^9.7.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "css-loader": "^3.4.1",
    "cypress": "^4.3.0",
    "file-loader": "^5.0.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.1.7",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.13.1",
    "postcss-loader": "^3.0.0",
    "sass-loader": "^8.0.0",
    "url-loader": "^3.0.0",
    "vue-loader": "^15.8.3",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "wp-vue-i18n": "^1.1.4",
    "yaml-lint": "^1.2.4"
  },
  "scripts": {
    "build": "webpack -p",
    "cypress": "npx cypress open",
    "i18n": "wpvuei18n makepot",
    "lint": "npx yamllint **/*.yml --ignore=node_modules/**",
    "start": "webpack --watch",
    "test": "npx cypress run"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.yml": [
      "npm run lint"
    ],
    "**/*.php": [
      "composer run-script lint"
    ]
  }
}
